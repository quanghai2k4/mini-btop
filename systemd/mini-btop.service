[Unit]
Description=mini-btop web system monitor
After=network.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/opt/mini-btop
ExecStart=/opt/mini-btop/monitor
Restart=always
RestartSec=5
Environment="PORT=8080"

# Security settings
NoNewPrivileges=true
PrivateTmp=true

[Install]
WantedBy=multi-user.target
